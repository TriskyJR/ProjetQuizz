{% extends 'base.html.twig' %}
{% block body %}
<h2 class="text-center">Questions</h2>
<a href="{{ path('new') }}" class="mt-1 mb-1 btn btn-success">Ajouter une question</a>
{% for key, que in questions %}
<div class="card">
    <div class="card-header">
      Question {{ nbrQuestion[key] }}
    </div>
    <div class="card-body">
      <h5 class="card-title">{{ que.queTitle }}</h5>
      {% for ans in que.tAnswers %}
      <p class="card-text">{{ ans.ansTitle }}</p>
      {% endfor %}
      <a href="{{ path('questionEdit', {'id': que.id}) }}" class="btn btn-primary">Modifier questions</a>
      <a href="{{ path('answerEdit', {'id_question': que.id}) }}" class="btn btn-primary">Modifier r√©ponses</a>
    </div>
  </div>
