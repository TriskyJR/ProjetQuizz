<h1>{{ userID }}</h1>
{#{% for key, question in questions|slice(questionLimitDown,10)%}#}
<form action="{{ path('quiz') }}" method="POST">
{% for key, question in questions %}
	<div class="card bg-light mb-3 d-flex align-self-center" style="width: 70rem;">
		<div class="card-header">Question :
			{{ nbrQuestion[key] }}</div>
		<div class="card-body">
			<h3>{{ question.queTitle }}</h3>
			{% for ans in question.tAnswers %}
				<input name="answers[]" {% if question.queType == 0 %} type="checkbox" {% else %} id="question{{ question.id }}" type="radio" {% endif %} value="{{ ans.id }}">
				{{ ans.ansTitle }}
				{#name="answer{{ question.id }}"#}
			</input><br>
		{% endfor %}
	</div>
</div>{% endfor %}<div
